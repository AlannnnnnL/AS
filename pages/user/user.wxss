/* pages/user/user.wxss */
@import '../../lib/iconfont.wxss'; 
page {
  width: 100%;
  height: 100%;
}
.top-img {
  width: 100%;
  height: 400rpx;
}
.title {
  display: flex;
}
.title-img {
  flex: 1;
}
.user-head-img {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  background-position: 50%;
  background-repeat: no-repeat;
  background-size: cover;
  border-radius: 50%;
  position: relative;
  top: -70rpx;
  left: 40rpx;
  border: 2px solid #fff;
  box-shadow: 0 0 5px #000;
}
.user-name {
  flex: 2;
  padding-top: 30rpx;
}
.item {
  background-color: #eee;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  box-shadow: 0 0 1px #000;
}
.item:first-child {
  box-shadow: 0 0 2px #000;
  margin-bottom: 30rpx;
}
.item-left {
  margin-right: 20rpx;
}
.item-right {
  float: right;
}