/* pages/mora/mora.wxss */
.game {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  text-align: center;
  padding-left: 32rpx;
  padding-right: 32rpx;
  font-size: 30rpx;
  font-weight: 500;
  color:#000000;
}
.result-info {
  display: block;
  padding-top: 40rpx;
  padding-bottom: 30rpx;
}
.result-info text {
  color: blue;
}
.top {
  padding: 0 32rpx;
  display: flex;
  margin: 0 auto;
  align-items: center;
}
.top image {
  width: 180rpx;
  height: 180rpx;
}
.top-info {
  font-size: 30rpx;
  color: blue;
  flex: 1;
}
.content {
  margin-top: 60rpx;
  background-color: white;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 32rpx;
  height: 65%;
}
.content-img {
  margin-top: 60rpx;
  display: flex;
  justify-content: space-between;
}
.content-img image{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.btn {
  margin: 80rpx auto;
  background-color: #9B9B9B;
  width: 500rpx;
}